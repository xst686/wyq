<% include ../header.ejs %>
<section class="pub-wrap">
    <div class="container">
        <div class="pub-inner">
            <h1 class="page-title">发布视频作品</h1>
            <form class="form-horizontal" action="">
                <div class="form-group">
                    <label for="" class="col-xs-3 col-sm-1 control-label"><em>*</em>名称:</label>
                    <div class="col-xs-9 col-sm-11">
                        <input type="text" class="form-control" autocomplete="off" placeholder="请填写作品名称" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 col-sm-1 control-label"><em>*</em>视频地址:</label>
                    <div class="col-xs-9 col-sm-11">
                        <input type="text" class="form-control" autocomplete="off" placeholder="请填写您的联系电话" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 col-sm-1 control-label">上传视频:</label>
                    <div class="col-xs-9 col-sm-11">
                        <a class="btn btn-danger" href="">上传</a>
                        <a class="btn btn-success" href="">预览</a>
                        <div class="progress mt10">
                            <div class="progress-bar progress-bar-warning progress-bar-striped active" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
                                <span class="sr-only">60% Complete (warning)</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 col-sm-1 control-label">简介:</label>
                    <div class="col-xs-9 col-sm-11">
                        <textarea class="col-sm-12" rows="5" placeholder="请填写作品详细信息"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 col-sm-1 control-label"><em>*</em>标签:</label>
                    <div class="col-xs-9 col-sm-11">
                        <input type="text" class="form-control" autocomplete="off" placeholder="请填写作品关键词" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 col-sm-1 control-label"><em>*</em>类型:</label>
                    <div class="col-xs-9 col-sm-11">
                        <div class='diy_select'>
                            <input type='hidden' name='' class='diy_select_input'/>
                            <div class='diy_select_txt'>--请选择--</div>
                            <div class='diy_select_btn'></div>
                            <ul class='list-unstyled diy_select_list'>
                                <li>短片</li>
                                <li>微电影</li>
                                <li>宣传片</li>
                                <li>MV</li>
                                <li>后期效果</li>
                                <li>广告</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-6 col-sm-10">
                        <input type="submit" class="btn btn-warning" hidefocus="true" value="保存"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<script src="/javascripts/form_select.js"></script>
<% include ../footer.ejs %>
