<% include ../header.ejs %>
<section class="pub-wrap">
    <div class="container">
        <div class="pub-inner">
            <h1 class="page-title">发布视频作品</h1>
            <form class="form-horizontal" action="">
                <div class="form-group">
                    <label for="" class="col-xs-3 col-sm-1 control-label"><em>*</em>标题:</label>
                    <div class="col-xs-9 col-sm-11">
                        <input type="text" class="form-control" autocomplete="off" placeholder="请填写文章标题" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 col-sm-1 control-label">正文:</label>
                    <div class="col-xs-9 col-sm-11">

                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 col-sm-1 control-label"><em>*</em>标签:</label>
                    <div class="col-xs-9 col-sm-11">
                        <input type="text" class="form-control" autocomplete="off" placeholder="请填写作品关键词" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 col-sm-1 control-label"><em>*</em>视频地址:</label>
                    <div class="col-xs-9 col-sm-11">
                        <input type="text" class="form-control" autocomplete="off" placeholder="请填写您的联系电话" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-xs-3 col-sm-1 control-label"><em>*</em>所属:</label>
                    <div class="col-xs-9 col-sm-11">
                        <div class='diy_select'>
                            <input type='hidden' name='' class='diy_select_input'/>
                            <div class='diy_select_txt'>--请选择--</div>
                            <div class='diy_select_btn'></div>
                            <ul class='list-unstyled diy_select_list'>
                                <li>新建专栏</li>
                                <li>专栏名称</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-6">
                        <div class="form-group">
                            <label for="" class="col-xs-3 col-sm-3 control-label"><em>*</em>名称:</label>
                            <div class="col-xs-9 col-sm-9">
                                <input type="text" class="form-control" autocomplete="off" placeholder="请填写专栏名称" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-xs-3 col-sm-3 control-label">简介:</label>
                            <div class="col-xs-9 col-sm-9">
                                <textarea class="col-sm-12" rows="5" placeholder="请填写专栏详细信息"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-xs-3 col-sm-3 control-label"><em>*</em>标签:</label>
                            <div class="col-xs-9 col-sm-9">
                                <input type="text" class="form-control" autocomplete="off" placeholder="请填写作品关键词" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-xs-3 col-sm-3 control-label"><em>*</em>上传封面:</label>
                            <div class="col-xs-9 col-sm-9">
                                <a class="btn btn-danger" href="">上传</a>
                                <a class="btn btn-success" href="">预览</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-6 col-sm-10">
                        <input type="submit" class="btn btn-warning" hidefocus="true" value="保存"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<script src="/javascripts/form_select.js"></script>
